<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  <servlet-name>Add</servlet-name>
           <servlet-class>com.product.AddProduct</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>Update</servlet-name>
           <servlet-class>com.product.UpdateProduct</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>Delete</servlet-name>
           <servlet-class>com.product.DeleteProduct</servlet-class>
  </servlet>
  <servlet-mapping> 
  <servlet-name>Add</servlet-name>
  <url-pattern>/add-product</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping> 
  <servlet-name>Update</servlet-name>
  <url-pattern>/update-product</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping> 
  <servlet-name>Delete</servlet-name>
  <url-pattern>/delete-product</url-pattern>
  </servlet-mapping>
</web-app>
